  <h1> Hangman </h1>
  <div class="hangman">
  <% if session[:failures] == 10 %>
  <img src="0.jpg">
  <% elsif session[:failures] == 9 %>
  <img src="1.jpg">
  <% elsif session[:failures] == 8 %>
  <img src="2.jpg">
  <% elsif session[:failures] == 7 %>
  <img src="3.jpg">
  <% elsif session[:failures] == 6 %>
  <img src="4.jpg">
  <% elsif session[:failures] == 5 %>
  <img src="5.jpg">
  <% elsif session[:failures] == 4 %>
  <img src="6.jpg">
  <% elsif session[:failures] == 3 %>
  <img src="7.jpg">
  <% elsif session[:failures] == 2 %>
  <img src="8.jpg">
